<!DOCTYPE html>
<html lang="en">
  <%- include('templates/head'); %>
<body>

  <input id="input" type="hidden" value="<%= status %>">
  <input id="url" type="hidden" value="<%= url %>">

  <script src="js/sweetalert2.js"></script>
  <script>
    
    function sweetSuccess(str) {
      Swal.fire({
        position: 'center',
        type: 'success',
        title: str,
        showConfirmButton: false,
        timer: 1500
      })
    }

    function sweetError(str) {
      Swal.fire({
        type: 'error',
        title: 'Yahh...',
        text: str,
        showConfirmButton: false,
        timer: 1500
      })
    }

    let input = $('#input').val();
    let url = $('#url').val();

    let interval = setInterval(() => {
      switch (input) {
        case "pesan-sukses":
          sweetSuccess('Terima kasih telah memesan!');
          break;
        case "hapus-berhasil":
          sweetSuccess('Berhasil menghapus!');
          break;
        case "terimakasih":
          sweetSuccess('Terima kasih! :)');
          break;
        case "logout":
          sweetSuccess('Bye! :(');
          break;
        case "success-login":
          sweetSuccess('Login berhasil!');
          break;
        case "gagal-tgl":
          sweetError('Tanggal sudah lewat :(');
          break;
        case "gagal-login":
          sweetError('Username / Password salah :(');
          break;
      }
      
      setInterval(() => {
        window.location.href = url;
      }, 1500);
      clearInterval(interval);
    }, 300);
    

  </script>

</body>
</html>